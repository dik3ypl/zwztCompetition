<article class="col-12 col-md-6 col-lg-4 mb-5 article-tile-wrapper" data-substance-group="{{substanceGroup}}">
    <div class="article-tile">
        <a href="/{{siteLink}}" class="article-image-wrapper">
            {{#if substanceGroup}}
            <div class="article-group-flag">
                {{substanceGroup}}
            </div>
            {{/if}}
            <img src="{{img}}" alt="{{name}}" class="img-fluid article-tile-image">
        </a>
        <div class="p-4">
            <a href="/{{siteLink}}" class="article-tile-title">
                <h3 class="h4 text-primary">
                    {{name}}
                </h3>
            </a>
            <p class="mb-0 text-muted">
                {{category}} - {{addedDate}}
            </p>
            <p class="article-tile-intro">
                {{{intro}}}
            </p>
            <a href="/{{siteLink}}" class="btn btn-primary">
                Czytaj
            </a>
        </div>
    </div>
</article>