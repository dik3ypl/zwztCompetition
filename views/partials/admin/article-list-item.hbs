<div class="col-12 col-md-6">
<div class="d-flex justify-content-between my-1 align-items-center rounded p-1 shadow">
  <div class="d-flex">
    <div class="px-1">
      <div>
        {{#if published}}
          <i class="fa-solid fa-eye text-success"></i>
        {{/if}}
      </div>
      <div>
        {{#if promoted}}
        <i class="fa-solid fa-star text-warning"></i>
        {{/if}}
      </div>
    </div>
    <div>
      <p class="mb-0">
        <a href="/admin/article/{{ id }}" class="fw-bold">{{name}}</a>
      </p>
      <p class="mb-0 text-muted">
      {{category}} - {{addedDate}}
      </p>
    </div>
  </div>
  
  <div class="articles-list-action">
    <a href="/{{siteLink}}" target="_blank" class="btn text-black">
      <i class="fa-solid fa-eye"></i>
    </a>
    <a href="/admin/article/{{ id }}" class="btn text-black">
      <i class="fa-solid fa-pen-to-square"></i>
    </a>
    <button class="btn text-black button-delete-article" data-id="{{id}}">
      <i class="fa-solid fa-trash-can"></i>
    </button>
  </div>
</div>
</div>